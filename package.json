{
    "name": "array-streams",
    "version": "0.1.0",
    "author": {
        "name": "Ben Horowitz",
        "email": "benyakir.horowitz@gmail.com"
    },
    "keywords": [
        "array",
        "streams",
        "functional"
    ],
    "description": "A library for working with arrays in a functional way motivated by Rust iterators.",
    "license": "MIT",
    "homepage": "https://github.com/benyakirten/array-stream",
    "bugs": {
        "url": "https://github.com/benyakirten/array-stream/issues"
    },
    "module": "index.ts",
    "type": "module",
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/bun": "latest",
        "@types/eslint__js": "^8.42.3",
        "eslint": "^9.12.0",
        "itertools": "^2.3.2",
        "prettier": "^3.3.3",
        "typescript-eslint": "^8.8.0",
        "vite": "^5.4.8",
        "vitest": "^2.1.2"
    },
    "peerDependencies": {
        "typescript": "^5.6.2"
    },
    "scripts": {
        "format:check": "prettier src/**/*.ts --check",
        "format:fix": "prettier src/**/*.ts --write",
        "lint:check": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "vitest",
        "test:ci": "vitest --run",
        "benchmark:html": "bun benchmark:build && vite ./benchmark",
        "benchmark:build": "bun build benchmark/stream.benchmark.ts --outfile=benchmark/benchmark.js",
        "benchmark:node:build": "bun benchmark/node.benchmark.ts --outfile=node-benchmark.js",
        "benchmark:node:run": "bun benchmark:node:build && node ./benchmark/node-benchmark.js ./benchmark/artifacts/node.md & bun ./benchmark/node-benchmark.js ./benchmark/artifacts/bun.md"
    }
}
